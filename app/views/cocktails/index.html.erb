<h1>Cocktails</h1>

<h2>
 <button>
  <%= link_to "Add Cocktail", new_cocktail_path %>
</button>
</h2>

<h3>
  All your cocktails:
</h3>

<p>
  <ul>
    <% @cocktails.each do |cocktail| %>
      <li>
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </li>
    <% end %>
  </ul>
</p>
